+
+            final PluginClassLoader loader;
+            try {
+                loader = new PluginClassLoader(getClass().getClassLoader(), description, dataFolder, path.toFile(), LIBRARY_LOADER.createLoader(description)); // Paper
+            } catch (InvalidPluginException ex) {
