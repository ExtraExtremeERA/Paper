+import java.util.List;
+
+class PluginManagerProviderStorage extends SimpleProviderStorage<JavaPluginProvider> {
+
+    private List<JavaPlugin> loaded;
+
+    @Override
+    public void enter() {
+        PluginLoadingStrategy strategy = switch (GlobalConfiguration.get().misc.pluginLoadingStrategy) {
+            case MODERN -> ModernPluginLoadingStrategy.INSTANCE;
+            case LEGACY -> LegacyPluginLoadingStrategy.INSTANCE;
+        };
+
+        List<PluginProvider<JavaPlugin>> providerList = new ArrayList<>(this.providers);
+
+        // Load paper plugin commands after they are loaded
+        // We have to use our own separate process
+        List<JavaPlugin> loaded = strategy.loadPlugins(providerList);
+        for (JavaPlugin plugin : loaded) {
+            ServerPluginProviderStorage.setupJavaplugin(plugin);
+        }
+
+        this.loaded = loaded;
+    }
+
+    @Override
+    public void register(JavaPluginProvider provider) {
+        super.register(provider);
+        /*
+        Register the provider into the server entrypoint, this allows it to show in /plugins correctly. Generally it might be better in the future to make a separate storage,
+        as putting it into the entrypoint handlers doesn't make much sense.
+         */
+        ServerEntryPointHandler.INSTANCE.register(Entrypoint.PLUGIN, provider);
+    }
+
+    public List<JavaPlugin> getLoaded() {
+        return this.loaded;
+    }
+}
